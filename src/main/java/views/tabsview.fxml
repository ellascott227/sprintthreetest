<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <ImageView fx:id="profileImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                  <TextField fx:id="searchBar" promptText="Search" />
                  <Button fx:id="searchButton" mnemonicParsing="false" text="Search" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" minWidth="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="jobsButton" mnemonicParsing="false" text="Jobs" />
                  <Button fx:id="profileButton" mnemonicParsing="false" text="Profiles" />
                  <Button fx:id="newsButton" mnemonicParsing="false" text="News" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
