<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainController">
   <top>
      <Pane prefHeight="100.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox>
                     <children>
                        <Rectangle fx:id="profileImage" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="50.0" stroke="BLACK" strokeType="INSIDE" width="50.0" />
                        <TextField fx:id="searchBar" promptText="Search" />
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onClickNews" text="Search" />
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_CENTER" minWidth="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="jobsButton" mnemonicParsing="false" onAction="#onClickJobs" text="Jobs" />
                        <Button fx:id="profileButton" mnemonicParsing="false" onAction="#onClickProfiles" text="Profiles" />
                        <Button fx:id="newsButton" mnemonicParsing="false" onAction="#onClickNews" text="News" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </Pane>
   </top>
</BorderPane>
